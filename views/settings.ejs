<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StreamTracker - <%= guild.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body { background-color: #1a1a2e; color: #fff; }
        .card { background-color: #16213e; border: none; color: #fff; border-radius: 15px; margin-bottom: 20px; }
        .card-header { background-color: #0f3460; border-radius: 15px 15px 0 0 !important; font-weight: bold; }
        .btn-primary { background-color: #e94560; border: none; }
        .btn-primary:hover { background-color: #cf3a54; }
        .leaderboard-row { transition: 0.3s; border-bottom: 1px solid #0f3460; }
        .leaderboard-row:hover { background-color: #0f3460; }
        .rank-1 { color: #ffd700; font-size: 1.5rem; } /* Gold */
        .rank-2 { color: #c0c0c0; font-size: 1.3rem; } /* Silber */
        .rank-3 { color: #cd7f32; font-size: 1.1rem; } /* Bronze */
    </style>
</head>
<body>
<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="fas fa-chart-line me-2 text-primary"></i> <%= guild.name %></h1>
        <a href="/dashboard" class="btn btn-outline-light">Zur√ºck</a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header"><i class="fas fa-trophy me-2"></i> Stream-Leaderboard</div>
                <div class="card-body p-0">
                    <table class="table table-dark table-hover mb-0">
                        <thead>
                            <tr>
                                <th class="ps-4">Platz</th>
                                <th>User</th>
                                <th>Minuten</th>
                                <th class="text-end pe-4">Aktion</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% trackedUsers.forEach((user, index) => { %>
                            <tr class="leaderboard-row align-middle">
                                <td class="ps-4">
                                    <% if(index === 0) { %> <i class="fas fa-crown rank-1"></i> 
                                    <% } else if(index === 1) { %> <i class="fas fa-medal rank-2"></i>
                                    <% } else if(index === 2) { %> <i class="fas fa-medal rank-3"></i>
                                    <% } else { %> #<%= index + 1 %> <% } %>
                                </td>
                                <td>
                                    <strong><%= user.username %></strong>
                                    <% if(user.isStreaming) { %> <span class="badge bg-danger ms-2">LIVE</span> <% } %>
                                </td>
                                <td><span class="text-info fw-bold"><%= user.totalMinutes %></span> Min.</td>
                                <td class="text-end pe-4">
                                    <form action="/dashboard/<%= guild.id %>/delete-user" method="POST" onsubmit="return confirm('Statistik wirklich l√∂schen?')">
                                        <input type="hidden" name="userId" value="<%= user.userId %>">
                                        <button class="btn btn-sm btn-outline-danger"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow mb-4">
                <div class="card-header">Rollen-Belohnungen</div>
                <div class="card-body">
                    <form action="/dashboard/<%= guild.id %>/save" method="POST" class="mb-3">
                        <input type="number" name="minutes" class="form-control mb-2" placeholder="Minuten" required>
                        <select name="roleId" class="form-select mb-2">
                            <% roles.forEach(role => { %>
                                <option value="<%= role.id %>"><%= role.name %></option>
                            <% }) %>
                        </select>
                        <button class="btn btn-primary w-100">Hinzuf√ºgen</button>
                    </form>
                    <hr>
                    <% config.rewards.forEach((r, i) => { %>
                        <div class="d-flex justify-content-between align-items-center mb-2 p-2 bg-dark rounded">
                            <span><%= r.minutesRequired %>m -> @<%= r.roleName %></span>
                            <form action="/dashboard/<%= guild.id %>/delete-reward" method="POST">
                                <input type="hidden" name="rewardIndex" value="<%= i %>">
                                <button class="btn btn-sm text-danger"><i class="fas fa-times"></i></button>
                            </form>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="card shadow">
                <div class="card-header">Kan√§le</div>
                <div class="card-body">
                    <form action="/dashboard/<%= guild.id %>/save-channels" method="POST">
                        <div style="max-height: 300px; overflow-y: auto;">
                            <% channels.forEach(ch => { %>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" name="channels" value="<%= ch.id %>" 
                                    <%= config.allowedChannels.includes(ch.id) ? 'checked' : '' %>>
                                    <label class="form-check-label small"><%= ch.type === 4 ? 'üìÅ' : 'üîä' %> <%= ch.name %></label>
                                </div>
                            <% }) %>
                        </div>
                        <button class="btn btn-sm btn-primary w-100 mt-3">Speichern</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
