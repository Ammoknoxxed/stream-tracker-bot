<!DOCTYPE html>
<html lang="de">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>StreamTracker - <%= guild.name %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/style.css">
    <style>
        .live-timer-active { color: #ff4757 !important; text-shadow: 0 0 10px rgba(255, 71, 87, 0.3); }
        .pulse-live { animation: pulse-red 2s infinite; }
        @keyframes pulse-red {
            0% { opacity: 1; }
            50% { opacity: 0.5; }
            100% { opacity: 1; }
        }
        .adjust-input {
            width: 70px;
            background: rgba(0,0,0,0.3);
            border: 1px solid rgba(255,255,255,0.1);
            color: white;
            border-radius: 4px;
            padding: 2px 5px;
            font-size: 0.85rem;
        }
        .btn-adjust {
            background: #fbbf24;
            color: black;
            border: none;
            border-radius: 4px;
            padding: 2px 8px;
            font-size: 0.75rem;
            font-weight: bold;
            transition: 0.2s;
        }
        .btn-adjust:hover { background: #f59e0b; }
    </style>
</head>
<body>

<div class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-5 glass-card p-4">
        <div class="d-flex align-items-center">
            <% if(guild.icon) { %>
                <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" class="rounded-circle me-3" style="width: 50px;">
            <% } %>
            <h1 class="h3 mb-0"><%= guild.name %> <span class="text-accent small">Dashboard</span></h1>
        </div>
        <a href="/dashboard" class="btn btn-outline-light btn-sm"><i class="fas fa-arrow-left me-1"></i> Zur√ºck</a>
    </div>

    <div class="row">
        <div class="col-lg-8 mb-4">
            <div class="glass-card h-100">
                <div class="p-4 border-bottom border-secondary d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="fas fa-trophy text-accent me-2"></i> Stream-Leaderboard</h5>
                    <span class="badge bg-dark"><%= trackedUsers.length %> User getrackt</span>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead>
                            <tr>
                                <th class="ps-4">Rank</th>
                                <th>User</th>
                                <th>Minuten</th>
                                <th>Zeit anpassen (+/-)</th>
                                <th class="text-end pe-4">Aktion</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% trackedUsers.forEach((user, index) => { 
                                let displayMinutes = user.totalMinutes;
                                if (user.isStreaming && user.lastStreamStart) {
                                    const sessionMins = Math.floor((new Date() - new Date(user.lastStreamStart)) / 60000);
                                    displayMinutes += sessionMins;
                                }
                            %>
                            <tr>
                                <td class="ps-4">
                                    <% if(index === 0) { %><i class="fas fa-crown rank-gold"></i>
                                    <% } else if(index === 1) { %><i class="fas fa-medal rank-silver"></i>
                                    <% } else if(index === 2) { %><i class="fas fa-medal rank-bronze"></i>
                                    <% } else { %><span class="opacity-50 ms-1">#<%= index + 1 %></span><% } %>
                                </td>
                                <td class="d-flex align-items-center">
                                    <div class="position-relative me-3">
                                        <img src="<%= user.avatar || 'https://cdn.discordapp.com/embed/avatars/0.png' %>" 
                                             style="width: 40px; height: 40px; border-radius: 50%; object-fit: cover;" 
                                             class="border border-2 <%= user.isStreaming ? 'border-danger' : 'border-secondary' %>">
                                        <% if(user.isStreaming) { %>
                                            <span class="position-absolute translate-middle badge rounded-pill bg-danger pulse-live" 
                                                  style="font-size: 0.5rem; bottom: -12px; left: 20px; border: 2px solid var(--bg-dark);">LIVE</span>
                                        <% } %>
                                    </div>
                                    <span class="fw-bold"><%= user.username %></span>
                                </td>
                                <td>
                                    <span class="text-accent fw-bold live-timer-container <%= user.isStreaming ? 'live-timer-active' : '' %>"
                                          data-base="<%= user.totalMinutes %>"
                                          data-start="<%= user.isStreaming && user.lastStreamStart ? user.lastStreamStart.toISOString() : 'null' %>">
                                        <%= displayMinutes %>
                                    </span> 
                                    <span class="small opacity-50">Min</span>
                                </td>
                                <td>
                                    <form action="/dashboard/<%= guild.id %>/adjust-time" method="POST" class="d-flex gap-1 align-items-center">
                                        <input type="hidden" name="userId" value="<%= user.userId %>">
                                        <input type="number" name="minutes" class="adjust-input" placeholder="+/- Min" required>
                                        <button type="submit" class="btn-adjust">OK</button>
                                    </form>
                                </td>
                                <td class="text-end pe-4">
                                    <form action="/dashboard/<%= guild.id %>/delete-user" method="POST" onsubmit="return confirm('Statistik wirklich l√∂schen?')">
                                        <input type="hidden" name="userId" value="<%= user.userId %>">
                                        <button class="btn btn-link text-danger p-0"><i class="fas fa-trash-alt"></i></button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                            <% if(trackedUsers.length === 0) { %>
                                <tr><td colspan="5" class="text-center py-5 opacity-50">Noch keine Daten vorhanden.</td></tr>
                            <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="glass-card p-4 mb-4">
                <h5 class="mb-3 text-accent"><i class="fas fa-gift me-2"></i> Belohnungen</h5>
                <form action="/dashboard/<%= guild.id %>/save" method="POST" class="mb-4">
                    <div class="input-group input-group-sm mb-2">
                        <span class="input-group-text bg-dark text-white border-secondary">Min</span>
                        <input type="number" name="minutes" class="form-control bg-transparent text-white border-secondary" placeholder="z.B. 60" required>
                    </div>
                    <select name="roleId" class="form-select form-select-sm bg-dark text-white border-secondary mb-2">
                        <% roles.forEach(role => { %>
                            <option value="<%= role.id %>">@<%= role.name %></option>
                        <% }) %>
                    </select>
                    <button class="btn btn-cyber btn-sm w-100">Hinzuf√ºgen</button>
                </form>
                <div class="reward-list">
                    <% config.rewards.forEach((r, i) => { %>
                        <div class="d-flex justify-content-between align-items-center p-2 mb-2 rounded bg-white bg-opacity-5 small">
                            <span><i class="fas fa-check-circle text-success me-1"></i> <strong><%= r.minutesRequired %>m</strong> &rarr; @<%= r.roleName %></span>
                            <form action="/dashboard/<%= guild.id %>/delete-reward" method="POST">
                                <input type="hidden" name="rewardIndex" value="<%= i %>">
                                <button class="btn btn-link text-danger p-0 ms-2"><i class="fas fa-times-circle"></i></button>
                            </form>
                        </div>
                    <% }) %>
                </div>
            </div>

            <div class="glass-card p-4">
                <h5 class="mb-3 text-accent"><i class="fas fa-microphone-lines me-2"></i> Kan√§le</h5>
                <form action="/dashboard/<%= guild.id %>/save-channels" method="POST">
                    <div class="channel-selector mb-3 p-2 bg-dark bg-opacity-50 rounded" style="max-height: 250px; overflow-y: auto; border: 1px solid rgba(255,255,255,0.1);">
                        <% channels.forEach(ch => { %>
                            <div class="form-check small mb-1">
                                <input class="form-check-input" type="checkbox" name="channels" value="<%= ch.id %>" id="ch-<%= ch.id %>"
                                <%= config.allowedChannels.includes(ch.id) ? 'checked' : '' %>>
                                <label class="form-check-label" for="ch-<%= ch.id %>">
                                    <%= ch.type === 4 ? 'üìÅ' : 'üîä' %> <%= ch.name %>
                                </label>
                            </div>
                        <% }) %>
                    </div>
                    <button class="btn btn-cyber btn-sm w-100">Kan√§le Speichern</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function updateLiveMinutes() {
        const now = new Date();
        document.querySelectorAll('.live-timer-container').forEach(el => {
            const startStr = el.getAttribute('data-start');
            const baseMins = parseInt(el.getAttribute('data-base'));
            
            if (startStr && startStr !== 'null') {
                const startTime = new Date(startStr);
                const diffMs = now - startTime;
                
                if (diffMs > 0) {
                    const sessionMinutes = Math.floor(diffMs / 60000);
                    el.innerText = baseMins + sessionMinutes;
                }
            }
        });
    }
    setInterval(updateLiveMinutes, 10000);
</script>

</body>
</html>
